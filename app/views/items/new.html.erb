<h1>new</h1>
<% if @item.errors.any? %>
    <ul>
        <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for(@item) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :description %> <br>
    <%= f.text_area :description %> <br>
    <%= f.label :condition %> <br>
    <%= f.select :condition, [""] + Item.conditions.keys %> <br>
    <%= f.submit %>
<% end %>