<h1>new</h1>
<%= form_for(@item) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :description %> <br>
    <%= f.text_area :description %> <br>
    <%= f.label :condition %> <br>
    <%= f.select :condition, [""] + Item.conditions.keys %> <br>
    <%= f.submit %>
<% end %>