<% if @item.errors.any? %>
    <ul>
        <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for(@item) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :description %> <br>
    <%= f.text_area :description %> <br>
    <%= f.label :condition %> <br>
    <%= f.select :condition, [["", ""]] + Item.conditions_i18n.invert.to_a %> <br>
    <%= f.label :price %> <br>
    <%= f.number_field :price, max: 9999999 %>å†† <br>
    <%= f.submit %>
<% end %>